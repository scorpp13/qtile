alias update='sudo cl-update'
alias fupdate='flatpak update'
alias esync='sudo emaint -a sync && sudo eix-update && sudo eselect news list'
alias upgrade='sudo emerge -avuDN @world'
alias clean='sudo cl-update -1 --clean-pkg'
alias fclean='flatpak uninstall --unused --delete-data'
alias purge='sudo eclean --deep packages && sudo eclean --deep distfiles && sudo eix-test-obsolete'
alias fpurge='flatpak uninstall --all --delete-data'
alias econf='sudo dispatch-conf'
alias repair='sudo emerge --regen && sudo revdep-rebuild -v && sudo emerge @preserved-rebuild'
alias frepair='sudo flatpak repair'
alias ehist='sudo genlop --list --date 1 days ago'
alias c='clear'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'
alias cp='cp -i'
alias ls='ls -a --color'
alias e='exit'
alias sv='sudo vifm'
